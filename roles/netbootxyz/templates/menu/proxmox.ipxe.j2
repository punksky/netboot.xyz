#!ipxe

# Proxmox Operating System
# https://www.proxmox.com

goto ${menu}

:proxmox
set os Proxmox
clear proxmox_version
clear older_release
menu ${os} - ${arch_a}
item --gap Latest Releases
{% for item in releases.proxmox.versions.stable %}
item {{ item.code_name }} ${space} ${os} {{ item.name }}
{% endfor %}
item --gap Older Releases
item older_release ${space} Set release codename...
choose proxmox_version || goto proxmox_exit
iseq ${proxmox_version} older_release && goto older_release ||
goto mirrorcfg

:older_release
set older_release true
set proxmox_mirror {{ releases.proxmox.mirror }}
echo Setting mirror to ${proxmox_mirror}
clear proxmox_version
echo -n Please set enter code name of release: ${} && read proxmox_version
set dir ${proxmox_base_dir}/dists/${proxmox_version}/main/installer-${arch_a}/current/images/netboot/
goto deb_boot_type

:mirrorcfg
set proxmox_mirror ${proxmox_mirror}
set mirrorcfg mirror/suite=${proxmox_version}
set dir ${proxmox_base_dir}/dists/${proxmox_version}/main/installer-${arch_a}/current/images/netboot/
goto deb_boot_type

:deb_boot_type
menu ${os} [${proxmox_version}] Installer
item --gap Install types
item text ${space} Text Based Install
item graphical ${space} Graphical Based Install
item rescue ${space} Rescue Mode
item expert ${space} Expert Install
item preseed ${space} Specify preseed url...
choose --default ${type} type || goto proxmox

echo ${cls}
goto deb_${type}

:deb_rescue
set install_params rescue/enable=true
goto deb_text

:deb_expert
set install_params priority=low
goto deb_text

:deb_preseed
echo -n Specify preseed URL for ${os} ${proxmox_version}: && read preseedurl
set install_params auto=true priority=critical preseed/url=${preseedurl}
goto deb_text

:deb_text
set dir ${dir}${menu}-installer/${arch_a}
goto deb_boot

:deb_graphical
set dir ${dir}gtk/${menu}-installer/${arch_a}
set install_params vga=788
goto deb_boot

:deb_boot
imgfree
echo Boot parameters: ${install_params} -- quiet ${params}
kernel ${proxmox_mirror}/${dir}/linux ${install_params} ${netcfg} ${mirrorcfg} ${console} -- quiet ${params} initrd=initrd.gz
initrd ${proxmox_mirror}/${dir}/initrd.gz
echo
echo MD5sums:
md5sum linux initrd.gz
boot

:proxmox_exit
clear menu
exit 0
